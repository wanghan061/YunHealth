<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <com.coder.yun.util.TitleBarUtils
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bigButtonHeight" >
    </com.coder.yun.util.TitleBarUtils>

    <LinearLayout
        android:background="@mipmap/userbackground"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="120dp">
        <ImageView
            android:layout_marginTop="10dp"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:padding="20dp"
            android:background="@mipmap/user_head"
            android:id="@+id/imageView4"
            android:layout_gravity="center_horizontal"

            />
        <TextView
            android:id="@+id/username_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:paddingTop="10dp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/white"
            />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:weightSum="2"
        android:background="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/tab_message">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的查房笔记"
                android:textSize="15sp"
                android:paddingLeft="20dp"
                android:id="@+id/textView5"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:textColor="#FF0000"-->
                <!--android:text="0"-->
                <!--android:textSize="15sp"-->
                <!--android:paddingLeft="20dp"-->
                <!--android:layout_alignTop="@+id/textView5"-->
                <!--android:layout_alignParentRight="true"-->
                <!--android:layout_alignParentEnd="true"-->
                <!--android:layout_marginRight="32dp"-->
                <!--android:layout_marginEnd="32dp"-->
                <!--android:id="@+id/id_sum" />-->

        </RelativeLayout>
        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="#9A9691"/>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/wodejiuzhenren">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="未回答的问题"
                android:id="@+id/textView8"
                android:layout_marginLeft="20dp"

                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
        </RelativeLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <LinearLayout
            android:id="@+id/dangan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="10dp" >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/user_01"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:text="健康档案"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/hui_discount_item_rule_arrow"/>
        </LinearLayout>

        <View

            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#F2F2F2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/yuyue"
            android:gravity="center_vertical"
            android:padding="10dp" >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/user_02"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:text="我的预约"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/hui_discount_item_rule_arrow"/>
        </LinearLayout>
        <View

            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#F2F2F2" />


        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#F2F2F2" />



        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#F2F2F2" />


        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#F2F2F2" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/yijian"
            android:gravity="center_vertical"
            android:padding="10dp" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:layout_weight="1"

                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:text="意见反馈"
                android:textSize="15sp" />


            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/hui_discount_item_rule_arrow"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#F2F2F2" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/about"
            android:gravity="center_vertical"
            android:padding="10dp" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:layout_weight="1"

                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:text="关于我们"
                android:textSize="15sp" />


            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/hui_discount_item_rule_arrow"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#F2F2F2" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/update"
            android:gravity="center_vertical"
            android:padding="10dp" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:layout_weight="1"

                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:text="检查更新"
                android:textSize="15sp" />



            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/hui_discount_item_rule_arrow"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#F2F2F2" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/xiugaimima"
            android:gravity="center_vertical"
            android:padding="10dp" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:layout_weight="1"

                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:text="修改密码"
                android:textSize="15sp" />


            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/hui_discount_item_rule_arrow"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#F2F2F2"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/resiglogin"
            android:gravity="center_vertical"
            android:padding="10dp" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:layout_weight="1"

                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:text="退出登录"
                android:textSize="15sp" />


            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/hui_discount_item_rule_arrow"/>
        </LinearLayout>



    </LinearLayout>

</LinearLayout>